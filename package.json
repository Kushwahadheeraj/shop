{
  "name": "shop-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "app/*",
    "backend"
  ],
  "scripts": {
    "dev:shop": "cd app/shop && npm run dev",
    "dev:backend": "cd backend && npm start",
    "build": "cd backend && npm install",
    "start": "cd backend && npm start",
    "build:render": "npm install && cd backend && npm install",
    "start:backend": "cd backend && npm start",
    "install:backend": "npm install && cd backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "next": "^16.0.3",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "aws4": "^1.13.2"
  }
}
