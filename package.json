{
  "name": "shop-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "app/*",
    "backend"
  ],
  "scripts": {
    "dev:shop": "npm run dev --workspace=shop",
    "dev:dashboard": "npm run dev --workspace=dashboard",
    "dev:backend": "npm start --workspace=backend",
    "build": "npm run build:render",
    "build:shop": "npm install --workspace=shop && npm run build --workspace=shop",
    "build:dashboard": "npm install --workspace=dashboard && npm run build --workspace=dashboard",
    "build:backend": "cd backend && npm install",
    "build:render": "npm install && npm run build:shop && npm run build:backend",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "next": "^15.1.0",
    "tailwindcss": "^4.0.0",
    "lines-and-columns": "^2.0.4",
    "@alloc/quick-lru": "^5.2.0",
    "@jridgewell/gen-mapping": "^0.3.8",
    "@jridgewell/remapping": "^2.3.0"
  },
  "dependencies": {
    "aws4": "^1.13.2"
  }
}
