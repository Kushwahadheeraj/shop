{
  "name": "shop-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "app/*",
    "backend"
  ],
  "scripts": {
    "dev:shop": "cd app/shop && npm run dev",
    "dev:dashboard": "cd app/dashboard && npm run dev",
    "dev:backend": "cd backend && npm start",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:shop\" \"npm run dev:dashboard\"",
    "build": "npm --workspace app/dashboard run build",
    "vercel-build": "npm --workspace app/dashboard run build",
    "build:shop": "npm --workspace app/shop run build",
    "build:dashboard": "npm --workspace app/dashboard run build",
    "build:render": "npm install && cd backend && npm install",
    "start": "npm run start:backend",
    "start:shop": "cd app/shop && npm run start",
    "start:dashboard": "cd app/dashboard && npm run start",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install && cd app/shop && npm install && cd ../dashboard && npm install && cd ../../backend && npm install",
    "install:backend": "npm install && cd backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "next": "^16.0.3"
  },
  "dependencies": {
    "aws4": "^1.13.2"
  }
}
